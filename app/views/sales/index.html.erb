<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.order(:created_at).each do |sale| %>
      <tr>
        <td><%= sale.total_sale %></td>
        <td><%= sale.created_at %></td>
        <td><%= link_to 'Show', sale %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path %>
