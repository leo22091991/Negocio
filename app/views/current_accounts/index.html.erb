<p id="notice"><%= notice %></p>

<h1>Current Accounts</h1>

<table border="1">
  <thead>
    <tr>
      <th>id</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>DNI</th>
      <th>Total</th>
      <th>Account status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_accounts.each do |current_account| %>
      <tr>
        <td><%= current_account.id %></td>
        <td><%= current_account.last_name %></td>
        <td><%= current_account.first_name %></td>
        <td><%= current_account.dni %></td>
        <td><%= current_account.total %></td>
        <td><%= current_account.account_status.description %></td>
        <td><%= link_to 'Show', current_account %></td>
        <td><%= link_to 'Edit', edit_current_account_path(current_account) %></td>
        <td><%= link_to 'Destroy', current_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

